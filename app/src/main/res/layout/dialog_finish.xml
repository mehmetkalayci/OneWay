<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curve_white"
        android:id="@+id/linearLayout"
        android:paddingBottom="50dp"
        android:layout_below="@+id/titleLayout"
        android:paddingTop="25dp"
        android:layout_marginTop="-20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/lblMessageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="0dp"
                android:text="@string/top_message"
                android:textColor="#ff6763"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lblMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/bottom_message"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/curve_grey"
                android:layout_below="@+id/lblWinTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-20dp"
                android:translationZ="0dp" />

            <TextView
                android:id="@+id/lblWinTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/curve_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/win_title"
                android:textColor="#534459"
                android:textSize="12sp"
                android:translationZ="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/lblScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="120"
                android:textColor="#534459"
                android:textSize="45sp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/lblRemainingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/curve_red"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/remaining_time"
                android:textColor="#534459"
                android:textSize="10sp"
                android:translationZ="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/lblLevelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/curve_blue"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:text="Level 1"
            android:textColor="@color/progressbar_text"
            android:textSize="20sp"
            android:translationZ="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="-50dp">

        <ImageButton
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_repeat" />

    </LinearLayout>

</RelativeLayout>