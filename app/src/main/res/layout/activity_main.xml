<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mainscreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image_1"
        android:id="@+id/anim1"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/anim2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="7dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image_2"
        android:id="@+id/anim2"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="105dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image_3"
        android:id="@+id/anim3"
        android:layout_alignParentTop="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="206dp"
        android:layout_alignBottom="@+id/menu"
        android:layout_alignRight="@+id/anim2"
        android:layout_alignEnd="@+id/anim2" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:gravity="center"
        android:padding="50dp"
        android:layout_below="@+id/anim2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/btnPlay"
                android:background="@drawable/button"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:background="@drawable/setting_button"
                android:id="@+id/btnSettings"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:layout_width="90dp"
                android:layout_height="60dp" />

            <ImageButton
                android:id="@+id/btnShare"
                android:background="@drawable/share_button"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:layout_width="90dp"
                android:layout_height="60dp" />

            <ImageButton
                android:id="@+id/btnInfo"
                android:background="@drawable/info_button"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:layout_width="90dp"
                android:layout_height="60dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>