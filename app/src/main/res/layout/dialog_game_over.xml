<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="350dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/curve_white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_marginTop="20dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleLayout">

        <TextView
            android:text="@string/gameover_title"
            android:layout_height="wrap_content"
            android:id="@+id/lblGameOverTitle"
            android:background="@drawable/curve_red"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textColor="@color/progressbar_text" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRepeat"
            android:src="@drawable/ic_repeat"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <TextView
        android:text="@string/gameover_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblGameOverMessage"
        android:gravity="center"
        android:layout_marginTop="65dp"
        android:textSize="14sp" />

</RelativeLayout>